<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_oauth_rocketchat' %>

<% if Setting.plugin_redmine_oauth_rocketchat[:oauth_authentification] %>
  <div class='button-login-container'>
    <%= link_to oauth_rocketchat_path(:back_url => back_url) do %>
      <%= button_tag :class => 'button-login' do %>
        <%= image_tag('/plugin_assets/redmine_oauth_rocketchat/images/rocketchat_login_icon.png', :class => 'button-login-icon', :alt => l(:login_via_rocketchat)) %>
        <%= content_tag :div, l(:login_via_rocketchat), :class => 'button-login-text' %>
      <% end %>
    <% end %>
  </div>
<% end %>
